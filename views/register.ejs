<%- include('partials/header')%>
<%- include('partials/nav')%>

<div class="container d-flex justify-content-center align-items-center mt-3 mb-2">
  <div class="row flex-fill">
    <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
      <div class="card shadow">
        <img src="https://images.unsplash.com/photo-1509822929063-6b6cfc9b42f2?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1470&q=80" alt="" class="card-img-top" />
        <div class="card-body">
          <h5 class="card-title">Register</h5>
          <form action="/register" method="POST">
            <div class="mb-2">
              <label class="form-label" for="username">Username</label>
              <input class="form-control" type="text" name="username" id="username" required autofocus>
              <div class="invalid-feedback">
                Cannot be empty!
              </div>
            </div>

            <div class="mb-2">
              <label class="form-label" for="firstName">First Name:</label>
              <input class="form-control" type="text" name="firstName" maxlength="10">
              <div class="invalid-feedback">
                Cannot be empty!
              </div>
            </div>

            <div class="mb-2">
              <label class="form-label" for="lastName">Last Name:</label>
              <input class="form-control" type="text" name="lastName" maxlength="10">
              <div class="invalid-feedback">
                Cannot be empty!
              </div>
            </div>

            <div class="mb-2">
              <label class="form-label" for="email">Email:</label>
              <input class="form-control" type="email" name="email" maxlength="35">
              <div class="invalid-feedback">
                Cannot be empty!
              </div>
            </div>

            <div class="mb-2">
              <label class="form-label" for="password">Password:</label>
              <input class="form-control" type="password" name="password" maxlength="35">
              <div class="invalid-feedback">
                Cannot be empty!
              </div>
            </div>

            <div class="mb-2">
              <label class="form-label" for="type">Type:</label>
              <select class="form-control" type="dropdown" name="type">
                <option value="student">student</option>
                <option value="teacher">teacher</option><br>
              </select>
              <div class="invalid-feedback">
                Cannot be empty!
              </div>
            </div>


            <div class="d-grid">
              <button class="btn btn-success">Register</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer')%>