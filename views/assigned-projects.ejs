<%- include('partials/header')%>
<%- include('partials/nav')%>

<div class="container">
  <% if(assignments.length < 1) {%>
  <div class="m-2 p-1 border-bottom text-center">
    <h1>Your Assignments will show here.</h1>
  </div>
  <% } else {%>
  <div class="m-2 p-1 border-bottom text-center">
    <h1>Assignments</h1>
  </div>
  <div class="row">
    <% assignments.forEach((assignment, i)=>{ %>
    <div class="col-12 col-md-6 col-lg-4 mt-2">
      <div class="card text-center h-100">
        <img src="https://github.com/Zaaraf/Online-Assignment-Evaluation/blob/main/public/assets/assignment.jpg?raw=true" class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title"><%= assignment.title %></h5>
          <p class="card-text"><%= assignment.details %></p>
          <a href="/admin/project/<%= assignment._id %>" class="btn btn-primary">View</a>
        </div>
      </div>
    </div>
    <% }); %>
  </div>
  <% } %>
</div>

<%- include('partials/footer')%>